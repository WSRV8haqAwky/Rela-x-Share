<main>

  <div class='container'>
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
        <h2 class="pt-3">ログイン</h2>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
          <div class="field">
            <%= f.label :ユーザー名 %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <div class="field">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :入力内容を保存 %>
              </div>
            <% end %>
          </div>
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-sm btn-primary" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
        <br />
      </div>
    </div>
  </div>
</main>