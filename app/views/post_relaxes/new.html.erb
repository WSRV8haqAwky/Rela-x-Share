<div class="container">
    <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>投稿フォーム</h2>

        <% if @post_relax.errors.any? %>
        　<div id="error explanation">
        　   <h3><%= @post_relax.errors.count %>件のエラーが発生しました %></h3>
              <ul>
                <% @post_relax.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
        　</div>
        <% end %>

        <%= form_with model: @post_relax, local:true do |f| %>
          <div class="form-group">
            <label for="post_relax_image">画像</label>
            <%= f.attachment_field :image, class:"form-control-file" %>
          </div>
          <%= attachment_image_tag @post_relax, :image, :fill, 100, 100, fallback: "default-image.jpg",class:"mt-2" %>

          <div class="form-group">
            <label for="post_relax_caption">説明</label>
            <%= f.text_area :caption, class:"form-control" %>
          </div>

          <div class="form-group">
            <%= f.submit '投稿',class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
</div>
