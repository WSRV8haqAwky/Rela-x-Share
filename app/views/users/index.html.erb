<main class="bg-light">
  <p  id="notice"><%= flash[:notice] %></p>

    <div class='container px-5 px-sm-0'>
    <div class='row'>
      <div class='col-md-3'>
        <h2>プロフィール</h2>
        <table class='table'>
          <tr>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "default-image.jpg", class:"rounded-circle" %> <!-- 固定値 -->
          </tr>
          <tr>
            <th><%= @user.name %></th>  <!-- 固定値 -->
          </tr>
          <tr>
            <td><%= @user.introduction %></td>  <!-- 固定値 -->
          </tr>
        </table>
        <div class='row'>
          <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>編集
          <% end %>
        </div>

        <div class='row mt-4'>
          <%= link_to new_post_relax_path(@post_relax), class: "btn btn-success btn-block" do %>
            <i class="fas fa-plus"></i> 新規投稿
          <% end %>
        </div>
      </div>

      <div class='col-md-8 offset-md-1'>
        <h2>ユーザー</h2>
          <div class="card-list-container">
            <div class="row">
                <% @users.each do |user| %>
                  <div class="col-lg-6 col-md-8 col-sm-10 mt-5">
                    <div class="card mx-auto shadow-lg h-100">
                      <div class="card-body">
                        <div class="row">
                          <div class="col-3">
                            <%= link_to user_path(user.id) do %>
                              <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "default-image.jpg", size: '60x60', class:"mt-3 rounded-circle"; %>
                            <% end %>
                          </div>
                          <div class="col-9">
                            <span><i class="fas fa-user"></i> <b><%= link_to user.name, user_path(user.id),class:"text-dark" %></b></span>
                            <p class="card-text"><%= user.introduction %></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <% end %>
                    <%= paginate @users %>
            </div>
          </div>
      </div>
    </div>
    </div>
</main>




